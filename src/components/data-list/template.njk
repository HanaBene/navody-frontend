<dl class="govuk-data-list {%- if params.classes %} {{ params.classes }}{% endif %}"{% for attribute, value in params.attributes %} {{attribute}}="{{value}}"{% endfor %}>
  {% for row in params.rows %}
    <div class="govuk-data-list__row">
      <dt class="govuk-data-list__item govuk-data-list__item--definition {%- if params.keyClasses %} {{ params.keyClasses }}{% endif %}">
        {{ row.key }}
      </dt>
      <dd class="govuk-data-list__item {%- if params.valueClasses %} {{ params.valueClasses }}{% endif %}">
        {{ row.html | safe if row.html else row.text }}
      </dd>
      {% if row.actions %}
        <dd class="govuk-data-list__action {%- if params.actionsClasses %} {{ params.actionsClasses }}{% endif %}">
          <ul class="govuk-data-list__action-list">
            {% for action in row.actions %}
              <li class="govuk-data-list__action-list-item">
                <a class="govuk-link" href="{{ action.href }}">
                  {{ action.text }}<span class="govuk-visually-hidden"> {{ row.key }}</span>
                </a>
              </li>
            {% endfor %}
          </ul>
        </dd>
      {% endif %}
    </div>
  {% endfor %}
</dl>